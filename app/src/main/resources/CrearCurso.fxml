<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="500.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CrearCursoController">
    <padding>
        <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
    </padding>
    
    <Label text="Crear Nuevo Curso">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    
    <Label style="-fx-text-fill: #666;" text="Los alumnos se matriculan manualmente despues de crear el curso">
        <font>
            <Font size="11.0" />
        </font>
    </Label>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="_Nombre del Curso:" />
        <TextField fx:id="txtNombreCurso" prefWidth="440.0" promptText="Introduzca el nombre del curso">
            <tooltip>
                <Tooltip text="Nombre identificativo del curso" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0" VBox.vgrow="ALWAYS">
        <Label mnemonicParsing="true" text="_Descripcion:" />
        <TextArea fx:id="txtDescripcion" prefHeight="120.0" prefWidth="440.0" promptText="Describa el contenido del curso" wrapText="true">
            <tooltip>
                <Tooltip text="Descripcion detallada del curso" />
            </tooltip>
        </TextArea>
    </VBox>
    
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <Button mnemonicParsing="true" onAction="#handleCancelar" text="C_ancelar">
            <tooltip>
                <Tooltip text="Cancelar y cerrar" />
            </tooltip>
        </Button>
        <Button fx:id="btnCrear" mnemonicParsing="true" onAction="#handleCrear" text="Cr_ear Curso">
            <tooltip>
                <Tooltip text="Crear el curso" />
            </tooltip>
        </Button>
    </HBox>
</VBox>
