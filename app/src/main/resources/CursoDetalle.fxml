<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CursoDetalleController">
    <top>
        <HBox alignment="CENTER_LEFT">
            <Label text="MUUDLE">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
                <HBox.margin>
                    <Insets left="5.0" />
                </HBox.margin>
            </Label>
            
            <HBox HBox.hgrow="ALWAYS" />
            
            <Button fx:id="btnVolverCursos" mnemonicParsing="true" onAction="#handleVolverCursos" text="_Volver a Cursos">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
                <tooltip>
                    <Tooltip text="Volver a la pantalla principal de cursos" />
                </tooltip>
            </Button>
        </HBox>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Usuarios">
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    
                    <Label text="Participantes del Curso">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <ComboBox fx:id="comboAlumnosDisponibles" prefWidth="300.0" promptText="Selecciona un usuario para a単adir">
                            <tooltip>
                                <Tooltip text="Selecciona un usuario disponible para a単adir al curso" />
                            </tooltip>
                        </ComboBox>
                        <Button mnemonicParsing="true" onAction="#handleAnadirAlumnoCurso" text="_A単adir Usuario">
                            <tooltip>
                                <Tooltip text="A単adir el usuario seleccionado al curso" />
                            </tooltip>
                        </Button>
                        <HBox HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnEliminarUsuarioCurso" mnemonicParsing="true" onAction="#handleEliminarUsuarioCurso" text="_Eliminar Usuario">
                            <tooltip>
                                <Tooltip text="Eliminar el usuario seleccionado del curso" />
                            </tooltip>
                        </Button>
                    </HBox>
                    
                    <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colUsuarioNombre" prefWidth="150.0" text="Nombre" />
                            <TableColumn fx:id="colUsuarioApellidos" prefWidth="150.0" text="Apellidos" />
                            <TableColumn fx:id="colUsuarioEmail" prefWidth="200.0" text="Email" />
                            <TableColumn fx:id="colUsuarioTipo" prefWidth="100.0" text="Rol" />
                            <TableColumn fx:id="colUsuarioEdad" prefWidth="80.0" text="Edad" />
                        </columns>
                        <tooltip>
                            <Tooltip text="Lista de usuarios matriculados en este curso" />
                        </tooltip>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Informacion">
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    
                    <Label text="Informacion del Curso">
                        <font>
                            <Font name="System Bold" size="24.0" />
                        </font>
                    </Label>
                    
                    <VBox spacing="10.0">
                        <Label text="Nombre del Curso:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtInfoNombre" prefWidth="400.0">
                            <tooltip>
                                <Tooltip text="Nombre del curso" />
                            </tooltip>
                        </TextField>
                    </VBox>
                    
                    <VBox spacing="10.0">
                        <Label text="Descripcion:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="txtInfoDescripcion" editable="true" prefHeight="150.0" wrapText="true">
                            <tooltip>
                                <Tooltip text="Descripcion del curso" />
                            </tooltip>
                        </TextArea>
                    </VBox>
                    
                    <VBox spacing="10.0">
                        <Label text="ID del Curso:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblInfoCursoId" />
                    </VBox>
                    
                    <VBox spacing="10.0">
                        <Label text="Numero de Alumnos:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblInfoAlumnos" />
                    </VBox>
                    
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <Button mnemonicParsing="true" onAction="#handleGuardarCambios" text="_Guardar">
                            <tooltip>
                                <Tooltip text="Guardar los cambios del curso" />
                            </tooltip>
                        </Button>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
