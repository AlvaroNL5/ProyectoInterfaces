<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CursoDetalleController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Label fx:id="lblNombreCurso" text="Detalle del Curso">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <HBox HBox.hgrow="ALWAYS" />
        <Label text="ID: " />
        <Label fx:id="lblInfoCursoId" text="0" />
        <Label text="  |  Alumnos: " />
        <Label fx:id="lblInfoAlumnos" text="0" />
    </HBox>
    
    <HBox spacing="20.0">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label mnemonicParsing="true" text="_Nombre:" />
            <TextField fx:id="txtInfoNombre" promptText="Nombre del curso">
                <tooltip>
                    <Tooltip text="Nombre del curso (editable para profesores)" />
                </tooltip>
            </TextField>
        </VBox>
    </HBox>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="_Descripcion:" />
        <TextArea fx:id="txtInfoDescripcion" prefHeight="80.0" promptText="Descripcion del curso" wrapText="true">
            <tooltip>
                <Tooltip text="Descripcion del curso (editable para profesores)" />
            </tooltip>
        </TextArea>
    </VBox>
    
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Alumnos en este curso:" />
        <HBox HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="comboAlumnosDisponibles" prefWidth="300.0" promptText="Seleccionar alumno para anadir">
            <tooltip>
                <Tooltip text="Seleccione un alumno disponible para anadir al curso" />
            </tooltip>
        </ComboBox>
        <Button fx:id="btnAnadirAlumno" mnemonicParsing="true" onAction="#handleAnadirAlumnoCurso" text="_Anadir">
            <tooltip>
                <Tooltip text="Anadir el alumno seleccionado al curso" />
            </tooltip>
        </Button>
    </HBox>
    
    <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colUsuarioNombre" prefWidth="150.0" text="Nombre" />
            <TableColumn fx:id="colUsuarioApellidos" prefWidth="150.0" text="Apellidos" />
            <TableColumn fx:id="colUsuarioEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colUsuarioTipo" prefWidth="100.0" text="Rol" />
            <TableColumn fx:id="colUsuarioEdad" prefWidth="80.0" text="Edad" />
        </columns>
    </TableView>
    
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="btnEliminarUsuarioCurso" mnemonicParsing="true" onAction="#handleEliminarUsuarioCurso" text="_Eliminar del Curso">
            <tooltip>
                <Tooltip text="Eliminar el alumno seleccionado de este curso" />
            </tooltip>
        </Button>
        <Button fx:id="btnGuardar" mnemonicParsing="true" onAction="#handleGuardarCambios" text="_Guardar Cambios">
            <tooltip>
                <Tooltip text="Guardar los cambios del curso" />
            </tooltip>
        </Button>
        <Button fx:id="btnVolverCursos" mnemonicParsing="true" onAction="#handleVolverCursos" text="Ce_rrar">
            <tooltip>
                <Tooltip text="Cerrar esta ventana" />
            </tooltip>
        </Button>
    </HBox>
</VBox>
