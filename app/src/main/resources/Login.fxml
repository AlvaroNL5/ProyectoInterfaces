<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.LoginController">
    <Label text="MUUDLE">
        <font>
            <Font name="Arial Bold" size="36.0" />
        </font>
    </Label>
    
    <Label style="-fx-font-size: 14px;" text="Plataforma Educativa">
        <VBox.margin>
            <Insets />
        </VBox.margin>
        <font>
            <Font name="Arial" size="12.0" />
        </font>
    </Label>
    
    <VBox spacing="5.0">
        <Label text="Usuario:">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="txtEmail" prefWidth="250.0" promptText="Ingrese su email">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
            <tooltip>
                <Tooltip text="Introduce tu email de usuario" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Contraseña:">
            <font>
                <Font name="Arial" size="12.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" prefWidth="250.0" promptText="Ingrese su contraseña">
            <tooltip>
                <Tooltip text="Introduce tu contraseña" />
            </tooltip>
        </PasswordField>
    </VBox>
    
    <Button fx:id="btnLogin" mnemonicParsing="true" text="_Iniciar sesion" textAlignment="CENTER">
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <font>
            <Font name="Arial" size="14.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        <tooltip>
            <Tooltip text="Iniciar sesion con tus credenciales" />
        </tooltip>
    </Button>
    
    <Button fx:id="btnRegistro" mnemonicParsing="true" onAction="#handleRegistro" text="_Registrarse" textAlignment="CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <font>
            <Font name="Arial" size="14.0" />
        </font>
        <tooltip>
            <Tooltip text="Crear una nueva cuenta" />
        </tooltip>
    </Button>
    
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
