<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="550.0" prefWidth="450.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CrearUsuarioController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Crear Nuevo Usuario">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <VBox spacing="5.0">
        <Label text="Nombre:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="txtNombre" prefWidth="400.0" promptText="Nombre del usuario">
            <tooltip>
                <Tooltip text="Introduce el nombre del usuario" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Apellidos:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="txtApellidos" prefWidth="400.0" promptText="Apellidos del usuario">
            <tooltip>
                <Tooltip text="Introduce los apellidos del usuario" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Email:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="txtEmail" prefWidth="400.0" promptText="Email del usuario">
            <tooltip>
                <Tooltip text="Introduce el email (será el usuario para login)" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Contraseña:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtPassword" prefWidth="400.0" promptText="Contraseña (mínimo 4 caracteres)">
            <tooltip>
                <Tooltip text="Introduce la contraseña (mínimo 4 caracteres)" />
            </tooltip>
        </PasswordField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Confirmar Contraseña:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <PasswordField fx:id="txtConfirmarPassword" prefWidth="400.0" promptText="Confirmar contraseña">
            <tooltip>
                <Tooltip text="Repite la contraseña" />
            </tooltip>
        </PasswordField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Rol:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <ComboBox fx:id="comboRol" prefWidth="400.0">
            <tooltip>
                <Tooltip text="Selecciona el tipo de usuario" />
            </tooltip>
        </ComboBox>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Edad:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TextField fx:id="txtEdad" prefWidth="400.0" promptText="Edad del usuario">
            <tooltip>
                <Tooltip text="Introduce la edad (0-150)" />
            </tooltip>
        </TextField>
    </VBox>
    
    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button cancelButton="true" mnemonicParsing="true" onAction="#handleCancelar" text="Ca_ncelar">
            <tooltip>
                <Tooltip text="Cancelar y volver" />
            </tooltip>
        </Button>
        <Button fx:id="btnCrear" mnemonicParsing="true" onAction="#handleCrear" text="_Crear Usuario">
            <tooltip>
                <Tooltip text="Crear el nuevo usuario" />
            </tooltip>
        </Button>
    </HBox>
</VBox>
