<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="450.0" spacing="12.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CrearUsuarioController">
    <padding>
        <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
    </padding>
    
    <Label text="Crear Usuario">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="_Nombre:" />
        <TextField fx:id="txtNombre" prefWidth="380.0" promptText="Nombre del usuario">
            <tooltip>
                <Tooltip text="Introduzca el nombre del usuario" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="A_pellidos:" />
        <TextField fx:id="txtApellidos" prefWidth="380.0" promptText="Apellidos del usuario">
            <tooltip>
                <Tooltip text="Introduzca los apellidos del usuario" />
            </tooltip>
        </TextField>
    </VBox>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="_Email:" />
        <TextField fx:id="txtEmail" prefWidth="380.0" promptText="email@ejemplo.com">
            <tooltip>
                <Tooltip text="Introduzca un email valido" />
            </tooltip>
        </TextField>
    </VBox>
    
    <HBox spacing="15.0">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label mnemonicParsing="true" text="Con_trasena:" />
            <PasswordField fx:id="txtPassword" promptText="Minimo 4 caracteres">
                <tooltip>
                    <Tooltip text="Introduzca una contrasena (minimo 4 caracteres)" />
                </tooltip>
            </PasswordField>
        </VBox>
        
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label mnemonicParsing="true" text="C_onfirmar:" />
            <PasswordField fx:id="txtConfirmarPassword" promptText="Repita la contrasena">
                <tooltip>
                    <Tooltip text="Repita la contrasena para confirmar" />
                </tooltip>
            </PasswordField>
        </VBox>
    </HBox>
    
    <HBox spacing="15.0">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label mnemonicParsing="true" text="_Rol:" />
            <ComboBox fx:id="comboRol" prefWidth="180.0" promptText="Seleccione rol">
                <tooltip>
                    <Tooltip text="Seleccione el rol: Profesor (gestion) o Alumno (consulta)" />
                </tooltip>
            </ComboBox>
        </VBox>
        
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label mnemonicParsing="true" text="E_dad:" />
            <TextField fx:id="txtEdad" promptText="Edad (0-150)">
                <tooltip>
                    <Tooltip text="Introduzca la edad del usuario (0-150)" />
                </tooltip>
            </TextField>
        </VBox>
    </HBox>
    
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
        <Button fx:id="btnCancelar" mnemonicParsing="true" onAction="#handleCancelar" text="C_ancelar">
            <tooltip>
                <Tooltip text="Cancelar y cerrar" />
            </tooltip>
        </Button>
        <Button fx:id="btnCrear" mnemonicParsing="true" onAction="#handleCrear" text="_Crear Usuario">
            <tooltip>
                <Tooltip text="Crear el nuevo usuario" />
            </tooltip>
        </Button>
    </HBox>
</VBox>
