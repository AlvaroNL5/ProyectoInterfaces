<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="450.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CrearMatriculaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Nueva Matriculacion">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="_Alumno:" />
        <ComboBox fx:id="comboUsuario" prefWidth="400.0" promptText="Seleccione un alumno">
            <tooltip>
                <Tooltip text="Seleccione el alumno a matricular" />
            </tooltip>
        </ComboBox>
    </VBox>
    
    <VBox spacing="5.0">
        <Label mnemonicParsing="true" text="_Curso:" />
        <ComboBox fx:id="comboCurso" prefWidth="400.0" promptText="Seleccione un curso">
            <tooltip>
                <Tooltip text="Seleccione el curso en el que matricular" />
            </tooltip>
        </ComboBox>
    </VBox>
    
    <HBox spacing="20.0">
        <VBox spacing="5.0">
            <Label mnemonicParsing="true" text="_Faltas:" />
            <TextField fx:id="txtFaltas" prefWidth="180.0" promptText="0">
                <tooltip>
                    <Tooltip text="Numero de faltas inicial (entero positivo)" />
                </tooltip>
            </TextField>
        </VBox>
        
        <VBox spacing="5.0">
            <Label mnemonicParsing="true" text="_Nota:" />
            <TextField fx:id="txtNota" prefWidth="180.0" promptText="0.0">
                <tooltip>
                    <Tooltip text="Nota inicial del alumno (0-10)" />
                </tooltip>
            </TextField>
        </VBox>
    </HBox>
    
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
        <Button mnemonicParsing="true" onAction="#handleCancelar" text="C_ancelar">
            <tooltip>
                <Tooltip text="Cancelar y cerrar" />
            </tooltip>
        </Button>
        <Button fx:id="btnCrear" mnemonicParsing="true" onAction="#handleCrear" text="Crear _Matriculacion">
            <tooltip>
                <Tooltip text="Crear la matriculacion" />
            </tooltip>
        </Button>
    </HBox>
</VBox>
