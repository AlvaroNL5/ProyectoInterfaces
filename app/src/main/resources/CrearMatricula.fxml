<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CrearMatriculaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Crear Nueva Matriculacion">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <VBox spacing="5.0">
        <Label text="Seleccionar Usuario:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <ComboBox fx:id="comboUsuario" prefWidth="450.0" promptText="Selecciona un usuario">
            <tooltip>
                <Tooltip text="Selecciona el usuario a matricular (max 2 cursos por usuario)" />
            </tooltip>
        </ComboBox>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Seleccionar Curso:">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <ComboBox fx:id="comboCurso" prefWidth="450.0" promptText="Selecciona un curso">
            <tooltip>
                <Tooltip text="Selecciona el curso en el que matricular" />
            </tooltip>
        </ComboBox>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Numero de Faltas (opcional):">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Spinner fx:id="spinnerFaltas" prefWidth="450.0">
            <tooltip>
                <Tooltip text="Numero de faltas inicial (por defecto 0)" />
            </tooltip>
        </Spinner>
    </VBox>
    
    <VBox spacing="5.0">
        <Label text="Nota Inicial (opcional):">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Spinner fx:id="spinnerNota" prefWidth="450.0">
            <tooltip>
                <Tooltip text="Nota inicial (por defecto 0.0)" />
            </tooltip>
        </Spinner>
    </VBox>
    
    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button cancelButton="true" mnemonicParsing="true" onAction="#handleCancelar" text="Ca_ncelar">
            <tooltip>
                <Tooltip text="Cancelar y cerrar" />
            </tooltip>
        </Button>
        <Button fx:id="btnCrear" mnemonicParsing="true" onAction="#handleCrear" text="_Crear Matricula">
            <tooltip>
                <Tooltip text="Crear la nueva matriculacion" />
            </tooltip>
        </Button>
    </HBox>
</VBox>
