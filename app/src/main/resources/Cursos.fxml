<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx.A_holamundofxml.CursosController">
    
    <top>
        <HBox alignment="CENTER">
            <Label text="MUUDLE">
                <font>
                    <Font name="System Bold" size="30.0" />
                </font>
            </Label>
            
            <HBox HBox.hgrow="ALWAYS" />
            
            <VBox alignment="CENTER_RIGHT">
                <Label fx:id="lblNombreUsuario" />
                <Label fx:id="lblTipoUsuario" />
            </VBox>
            
            <Button fx:id="btnCerrarSesion" mnemonicParsing="true" text="_Cerrar Sesión">
                <HBox.margin>
                    <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                </HBox.margin>
                <tooltip>
                    <Tooltip text="Cerrar sesion y volver al login" />
                </tooltip>
            </Button>
        </HBox>
    </top>
   
    <left>
        <VBox alignment="CENTER" prefHeight="652.0" prefWidth="142.0" spacing="10.0">
            <Label text="Menu">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            
            <Button fx:id="btnCursos" mnemonicParsing="true" prefWidth="100.0" text="_Cursos">
                <font>
                    <Font name="System" size="12.0" />
                </font>
                <tooltip>
                    <Tooltip text="Ver listado de cursos" />
                </tooltip>
            </Button>
            
            <Button fx:id="btnUsuarios" mnemonicParsing="true" prefWidth="100.0" text="_Usuarios">
                <font>
                    <Font name="System" size="12.0" />
                </font>
                <tooltip>
                    <Tooltip text="Ver listado de usuarios" />
                </tooltip>
            </Button>
            
            <Button fx:id="btnAsistencias" mnemonicParsing="true" prefWidth="100.0" text="_Matriculación">
                <tooltip>
                    <Tooltip text="Gestionar matriculaciones" />
                </tooltip>
            </Button>
            
            <Button fx:id="btnInformes" mnemonicParsing="true" prefWidth="100.0" text="I_nformes">
                <font>
                    <Font name="System" size="12.0" />
                </font>
                <tooltip>
                    <Tooltip text="Generar informes" />
                </tooltip>
            </Button>
            
            <Button fx:id="btnAjustes" mnemonicParsing="true" prefWidth="100.0" text="_Ajustes">
                <font>
                    <Font name="System" size="12.0" />
                </font>
                <tooltip>
                    <Tooltip text="Configuracion de la aplicacion" />
                </tooltip>
            </Button>
        </VBox>
    </left>
   
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="vboxCursos" prefHeight="200.0" prefWidth="100.0" visible="false">
                    <children>
                        
                        <VBox prefHeight="606.0" prefWidth="841.0" spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label alignment="CENTER" text="Cursos">
                                            <font>
                                                <Font name="System Bold" size="24.0" />
                                            </font>
                                        </Label>
                                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Button fx:id="btnCrearCurso" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="true" text="_Crear Curso">
                                                    <font>
                                                        <Font name="System" size="12.0" />
                                                    </font>
                                                    <tooltip>
                                                        <Tooltip text="Crear un nuevo curso" />
                                                    </tooltip>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </HBox>
                                
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="txtBuscar" promptText="Buscar por ID, nombre o descripción..." HBox.hgrow="ALWAYS">
                                            <tooltip>
                                                <Tooltip text="Buscar cursos por ID, nombre o descripcion" />
                                            </tooltip>
                                        </TextField>
                                    </children>
                                </HBox>
                                
                                <TableView fx:id="tablaCursos" prefHeight="43.0" prefWidth="761.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colIdCurso" prefWidth="60.0" text="ID" />
                                        <TableColumn fx:id="colNombreCurso" prefWidth="200.0" text="Nombre del Curso" />
                                        <TableColumn fx:id="colDescripcion" prefWidth="350.0" text="Descripcion" />
                                        <TableColumn fx:id="colCantUsuarios" prefWidth="100.0" text="Cant. Usuarios" />
                                    </columns>
                                </TableView>
                                
                                <HBox fx:id="hboxAcciones" alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnVerCursoConcreto" mnemonicParsing="true" onAction="#handleVerPerfil" text="_Ver curso">
                                            <tooltip>
                                                <Tooltip text="Ver detalles del curso seleccionado" />
                                            </tooltip>
                                        </Button>
                                        <Button fx:id="btnExpulsar" mnemonicParsing="true" onAction="#handleExpulsar" text="_Borrar">
                                            <tooltip>
                                                <Tooltip text="Eliminar el curso seleccionado" />
                                            </tooltip>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
                
                <VBox fx:id="vboxUsuarios" spacing="20.0" visible="false">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label text="Usuarios">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnCrearUsuario" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="true" text="C_rear Usuario">
                                            <font>
                                                <Font name="System" size="12.0" />
                                            </font>
                                            <tooltip>
                                                <Tooltip text="Crear un nuevo usuario" />
                                            </tooltip>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="txtBuscar1" promptText="Buscar por ID, nombre, apellidos o email..." HBox.hgrow="ALWAYS">
                                    <tooltip>
                                        <Tooltip text="Buscar usuarios por ID, nombre, apellidos o email" />
                                    </tooltip>
                                </TextField>
                            </children>
                        </HBox>
                        
                        <TableView fx:id="tablaUsuarios1" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdUsuario1" prefWidth="60.0" text="ID Usuario" />
                                <TableColumn fx:id="colNombre1" prefWidth="150.0" text="Nombre" />
                                <TableColumn fx:id="colApellidos1" prefWidth="150.0" text="Apellidos" />
                                <TableColumn fx:id="colEmail1" prefWidth="200.0" text="Email" />
                                <TableColumn fx:id="colTipo1" prefWidth="100.0" text="Rol" />
                                <TableColumn fx:id="colEdad1" prefWidth="80.0" text="Edad" />
                            </columns>
                        </TableView>
                        
                        <HBox fx:id="hboxAcciones1" alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="btnVerPerfil1" mnemonicParsing="true" onAction="#handleVerPerfil" text="Ver _Perfil">
                                    <tooltip>
                                        <Tooltip text="Ver perfil del usuario seleccionado" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="btnExpulsar1" mnemonicParsing="true" onAction="#handleExpulsar" text="E_xpulsar">
                                    <tooltip>
                                        <Tooltip text="Eliminar el usuario seleccionado" />
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                
                <VBox fx:id="vboxAsistencias" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label text="Matriculación">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnCrearMatricula" mnemonicParsing="true" text="Crear _Matrícula">
                                            <tooltip>
                                                <Tooltip text="Crear una nueva matriculacion" />
                                            </tooltip>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        
                        <HBox>
                            <children>
                                <TextField fx:id="txtBuscar11" prefHeight="26.0" prefWidth="745.0" promptText="Buscar por ID usuario, nombre, apellidos, ID curso o nombre curso...">
                                    <HBox.margin>
                                        <Insets />
                                    </HBox.margin>
                                    <tooltip>
                                        <Tooltip text="Buscar matriculaciones" />
                                    </tooltip>
                                </TextField>
                            </children>
                        </HBox>
                        
                        <TableView fx:id="tablaUsuarios11" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colIdUsuarioAsistencia" prefWidth="70.0" text="ID Usuario" />
                                <TableColumn fx:id="colNombre11" prefWidth="120.0" text="Nombre" />
                                <TableColumn fx:id="colApellidos11" prefWidth="130.0" text="Apellidos" />
                                <TableColumn fx:id="colFaltas11" prefWidth="80.0" text="Faltas" />
                                <TableColumn fx:id="colNota11" prefWidth="70.0" text="Nota" />
                                <TableColumn fx:id="colIdCursoAsistencia" prefWidth="70.0" text="ID Curso" />
                                <TableColumn fx:id="colNombreCursoAsistencia" prefWidth="150.0" text="Curso" />
                            </columns>
                        </TableView>
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="btnInsertar" mnemonicParsing="true" text="_Editar">
                                    <tooltip>
                                        <Tooltip text="Editar la matriculacion seleccionada" />
                                    </tooltip>
                                </Button>
                                <Button fx:id="btnEliminarMatricula" mnemonicParsing="true" text="E_liminar">
                                    <tooltip>
                                        <Tooltip text="Eliminar la matriculacion seleccionada" />
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
